{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.22/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 35,
  "default_container_padding": 35,
  "border_padding": 0,
  "border_offset": 0,
  "active_window_border": true,
  "active_window_border_colours": {
    "single": "#4c2b7a",
    "stack": "#4c2b7a",
    "monocle": "#4c2b7a"
  },
  "border_width": 3,
  "monitors": [
    {
      "workspaces": [
        { "name": "1", "layout": "BSP" },
        { "name": "2", "layout": "BSP" },
        { "name": "3", "layout": "BSP" },
        { "name": "4", "layout": "BSP" },
        { "name": "5", "layout": "BSP" },
        { "name": "6", "layout": "BSP" },
        { "name": "7", "layout": "BSP" },
        { "name": "8", "layout": "BSP" },
        { "name": "9", "layout": "BSP" },
        { "name": "10", "layout": "BSP" },
      ]
    }
  ]
}
